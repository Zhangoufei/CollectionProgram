<UserControl x:Class="倒计时.UserTimeStyle1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:倒计时"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="40"/>
            <ColumnDefinition />
            <ColumnDefinition Width="40"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBox Text="00" Name="HourArea"   VerticalAlignment="Center" FontSize="180" Background="Aqua" Grid.Column="0"/>
        <TextBlock Text=":" Name="HourSplitMinute"   VerticalAlignment="Center" FontSize="180" Background="Aqua" Grid.Column="1"/>
        <TextBox Text="10" Name="MinuteArea" VerticalAlignment="Center" FontSize="180" Background="Aqua" Grid.Column="2" />
        <TextBlock Text=":" Name="MinuteSplitSecond"   VerticalAlignment="Center" FontSize="180" Background="Aqua" Grid.Column="3"/>
        <TextBox Text="00"  Name="SecondArea" VerticalAlignment="Center" FontSize="180" Background="Aqua" Grid.Column="4"/>
    </Grid>
</UserControl>

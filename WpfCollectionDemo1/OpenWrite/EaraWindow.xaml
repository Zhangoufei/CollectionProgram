<Window x:Class="OpenWrite.EaraWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenWrite"
        mc:Ignorable="d"
        Title="EaraWindow" Height="450" Width="800">
    <Grid>
        <local:InkCanvaseMode x:Name="inkCanvase"  />
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" >
            <StackPanel Orientation="Horizontal" ButtonBase.Click="StackPanel_Click" >
                <Button Content="画笔模式" Margin="10" />
                <Button Content="橡皮檫模式"   Margin="10"  />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

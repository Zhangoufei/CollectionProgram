<Window x:Class="MyStyle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyStyle"
        xmlns:core="clr-namespace:Util.Control.Common;assembly=Util.Control.Common"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="grid" >
        <UniformGrid>
            <Button Content="其他按钮控件" Click="Button_Click" />
            <Button Content="自定义button控件" Click="Button_Click_1" />
            <Button Content="自定义textBox" Click="Button_Click_2" />
            <Button Content="自定义ScrollViewer" Click="Button_Click_3" />
            <Button Content="自定义ListBox" Click="Button_Click_4" />
            <Button Content="自定义翻页" Click="Button_Click_5" />
            <Button Content="自定义翻页用户控件" Click="Button_Click_6" />
        </UniformGrid>
    </Grid>
</Window>

<Window x:Class="MyStyle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="grid" >
        <UniformGrid>
            <Button Content="其他按钮控件" Click="Button_Click" />
            <Button Content="自定义button控件" Click="Button_Click_1" />
            <Button Content="自定义textBox" Click="Button_Click_2" />
            <Button Content="自定义ScrollViewer" Click="Button_Click_3" />
            <Button Content="自定义ListBox" Click="Button_Click_4" />
            <Button Content="自定义翻页" Click="Button_Click_5" />
            <Button Content="自定义翻页用户控件" Click="Button_Click_6" />
            <Button Content="单选样式" Click="Button_Click_7" />
            <Button Content="文字滚动" Click="Button_Click_8" />
            <Button Content="打开网页" Click="Button_Click_9" />
            <Button Content="打开ENB文件" Click="Button_Click_10" />
            <Button Content="阴影" Click="Button_Click_11" />
        </UniformGrid>
    </Grid>
</Window>

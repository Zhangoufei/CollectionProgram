<Window x:Class="MyStyle.window.WindowStyleStyle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="WindowStyle" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" >
            <Border Height="50" Width="100" Margin="10" Cursor="Hand"   >
                <Border.Effect >
                    <DropShadowEffect ShadowDepth="20"  BlurRadius="15" Color="Blue" />
                </Border.Effect>
                <TextBlock Text="按钮" FontSize="30" TextAlignment="Center" VerticalAlignment="Center" />
            </Border>
            <Border Height="50" Width="100" Margin="10" Cursor="Hand" BorderBrush="Gray" BorderThickness="1"  >
                <Border.Effect >
                    <DropShadowEffect ShadowDepth="0"  BlurRadius="15" Color="BlueViolet" />
                </Border.Effect>
                <TextBlock Text="按钮" FontSize="30" TextAlignment="Center" VerticalAlignment="Center" />
            </Border>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="MyStyle.StyleDictinary.SingleChangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SingleChangeWindow" Height="450" Width="800">
    <Grid>
        <UniformGrid>
            <ListBox x:Name="listBoxStyle"  >
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" IsItemsHost="True"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
            <StackPanel>
                <RadioButton />
            </StackPanel>
        </UniformGrid>
    </Grid>
</Window>

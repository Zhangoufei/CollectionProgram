<Window x:Class="MVVM绑定.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM绑定"
        mc:Ignorable="d"
        Title="ProgressWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <ProgressBar Maximum="100" Width="700" Height="100" Value="{Binding ProgressValue}" />
            <Button Content="点击添加进度" Click="Button_Click" />
        </StackPanel>


    </Grid>
</Window>
